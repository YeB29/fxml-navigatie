<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: BLACK;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminLoginController">
    <children>
        <Label layoutX="172.0" layoutY="173.0" text="Username" textFill="ORANGE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="172.0" layoutY="223.0" text="Password" textFill="ORANGE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="username" layoutX="294.0" layoutY="175.0" promptText="Username" />
        <Button fx:id="loginbutton" layoutX="332.0" layoutY="279.0" mnemonicParsing="false" onMouseClicked="#login" style="-fx-background-color: orange;" text="Log in">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Label fx:id="wrongLogin" layoutX="344.0" layoutY="81.0" textFill="RED">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <PasswordField fx:id="password" layoutX="294.0" layoutY="224.0" promptText="Password" />
        <Button fx:id="back" layoutX="452.0" layoutY="279.0" mnemonicParsing="false" onMouseClicked="#back" style="-fx-background-color: orange;" text="Back">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
